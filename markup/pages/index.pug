doctype html
html(class="no-js", lang="ru")

    include ../components/head/head.pug
    include ../components/top/top.pug
    include ../components/image-block/image-block.pug
    include ../components/list-block/list-block.pug
    include ../components/text-block/text-block.pug
    include ../components/features/features.pug
    include ../components/form/form.pug
    //- include ../components/footer/footer.pug

    head
        +head(head.defaults)
    body.page
        |%=symbols=%

        section.page__wrapper

            //- Include your components here
            .page__content

                +top()

                +image-block()

                +list-block(listBlock)

                +text-block(textBlock)

                +features(features)

                +form(form)

            .page__footer

                //- +footer()

        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')
